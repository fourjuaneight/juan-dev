{
  "name": "juan-dev",
  "version": "2.0.0",
  "description": "Hi, I'm Juan, an independent web developer from Florida. I help businesses build accessible and performant static sites with the JAMstack.",
  "scripts": {
    "build": "hugo -e production && npm run purge",
    "clean": "rm -rf public resources",
    "clean-node": "rm -rf node_modules",
    "development": "hugo -e development && npm run purge",
    "purge": "purgecss --css public/css/*.css --content public/**/*.html --out public/css",
    "start": "hugo -e development serve --disableFastRender"
  },
  "repository": {
    "type": "git",
    "url": "git+https://fourjuaneight@github.com/fourjuaneight/juan-dev.git"
  },
  "author": "Juan Villela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fourjuaneight/juan-dev/issues"
  },
  "homepage": "https://github.com/fourjuaneight/juan-dev#readme",
  "engines": {
    "node": "10.15.1"
  },
  "resolutions": {
    "natives": "1.1.3"
  },
  "devDependencies": {
    "postcss-cli": "^6.0.0",
    "postcss-preset-env": "^6.6.0",
    "purgecss": "^1.3.0"
  }
}
