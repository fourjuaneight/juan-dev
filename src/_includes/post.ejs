---json
{
  "layout": "default"
}
---

<article class="flex flex-column items-flex-start m--horizontal w-100">
  <h1 class="mra relative marked title"><%= title %></h1>
  <% if (typeof date === "string") { %>
    <section class="content-between flex flex-wrap w-100 meta__wrap">
      <time datetime="<%= date %>" class="f7 mra meta"><span aria-label="Posted on">&tau;</span><%= date %></time>
      <p class="f7 ma0 mr1"><span aria-hidden="true" class="meta">#</span><a href="<%= meta.domain %>/tags/<%= tags %>" itemprop="about" class="meta"><%= tags %></a></p>
    </section>
  <% } %>
  <p><%- content %></p>
</article>