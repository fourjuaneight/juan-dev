{
  "version": "https://jsonfeed.org/version/1",
  "title": "{{ .Site.Title }}",
  "description": "{{ .Site.Title }}",
  "home_page_url": "{{ .Site.BaseURL }}",
  "feed_url": "{{ with .OutputFormats.Get "json" -}}{{- .Permalink -}}{{- end }}",
  "author": {
    "name": "{{ .Site.Title }}",
    "url": "{{ .Site.BaseURL }}"
  },
  "items": [
    {{ range $index, $entry := .Data.Pages }}
    {{- if $index }}, {{ end }}
    {
      "title": "{{ .Title }}",
      "date_published": "{{ .Date.Format "2006-01-02" }}",
      "id": "{{ .Permalink }}",
      "url": "{{ .Permalink }}",
      "content_html": {{ .Content | jsonify }}
    }
    {{- end }}
  ]
}